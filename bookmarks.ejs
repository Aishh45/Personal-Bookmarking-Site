<%- include('layout', { body: `
<h2>Your Bookmarks</h2>

<!--search-->
<form method="GET">
  <input name="search" value="${search}" placeholder="Search title or url" />
  <button type="submit">Search</button>
</form>

<!--add b-->
<form method="POST" action="/bookmarks/add">
  <input name="title" placeholder="Title" required />
  <input name="url" type="url" placeholder="URL" required />
  <button type="submit">Add</button>
</form>

<!--edit/delete-->
<ul>
  ${bookmarks.map(b => `
    <li>
      <strong>${b.title}</strong> - <a href="${b.url}" target="_blank">${b.url}</a>
      [${new Date(b.createdAt).toLocaleString()}]
      <a href="/bookmarks/edit/${b._id}">Edit</a>
      <a href="/bookmarks/delete/${b._id}" onclick="return confirm('Are you sure you want to delete this bookmark?');">Delete</a>
    </li>
  `).join('')}
</ul>

<!--pagination links-->
<div>
  ${[...Array(totalPages).keys()].map(i => `
    <a href="/bookmarks?page=${i + 1}&search=${search}">${i + 1}</a>
  `).join('')}
</div>

<a href="/logout" onclick="return confirm('Are you sure you want to logout?');">Logout</a>
` }) %>
